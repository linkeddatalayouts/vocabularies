@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix lidl: <http://www.dfki.org/lidl#> .

@prefix ex:	<http://example.com/ns#> .
@prefix img: <http://www.bar.org/2001/XMLSchema#> .
@prefix dcat: <http://www.w3.org/ns/dcat#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix exif: <http://www.w3.org/2003/12/exif/ns> .

##################################################
## External vocabs
##################################################

rdf:value a rdf:Property .
dcat:byteSize a rdf:Property .
dct:format  a rdf:Property .
dcat:downloadURL a rdf:Property .
exif:width a rdf:Property .
exif:height a rdf:Property .

img:pixels a rdf:Property .
img:red a rdf:Property .
img:blue a rdf:Property .
img:green a rdf:Property . 


##################################################
# Layout (meta)
##################################################


img:RGBImage
  a lidl:Composite ; 
  lidl:endianess lidl:LittleEndian ;
  lidl:attribute _:width , _:height , _:pixels .

_:width
  a lidl:Attribute ;
  lidl:order 0;
  lidl:predicate  exif:width ;
  lidl:elementCount 1 ;
  lidl:elementShape [
    a lidl:Atomic ;
    lidl:endianess lidl:LittleEndian ;
    lidl:byteSize 4 ;
    lidl:datatype xsd:integer
  ] .

_:height
  a lidl:Attribute ;
  lidl:order 1;
  lidl:predicate exif:height ;
  lidl:elementCount 1 ;
  lidl:elementShape [
    a lidl:Atomic ;
    lidl:endianess lidl:LittleEndian ;
    lidl:byteSize 4 ;
    lidl:datatype xsd:integer
  ] .

_:pixels
  a lidl:Attribute ;
  lidl:endianess lidl:LittleEndian ;
  lidl:order 2 ;
  lidl:predicate img:pixels ; 
  lidl:elementCount 1 ;
  lidl:elementShape img:RGBPixel .



img:RGBPixel
  a lidl:Composite ;
  lidl:endianess lidl:LittleEndian ;
  lidl:attribute _:red , _:green , _:blue . 

_:red
  a lidl:Attribute ;
  lidl:order 0;
  lidl:predicate img:red ; 
  lidl:elementCount 1 ;
  lidl:elementShape [
    a lidl:Atomic ;
    lidl:endianess lidl:LittleEndian ;
    lidl:byteSize 1 ;
    lidl:datatype xsd:unsignedByte 
  ] .

_:green
  a lidl:Attribute ;
  lidl:order 1;
  lidl:predicate img:green ;
  lidl:elementCount 1 ;
  lidl:elementShape [
    a lidl:Atomic ;
    lidl:endianess lidl:LittleEndian ;
    lidl:byteSize 1 ;
    lidl:datatype xsd:unsignedByte 
  ] .

_:blue
  a lidl:Attribute ;
  lidl:order 2;
  lidl:predicate img:blue ;
  lidl:elementCount 1 ;
  lidl:elementShape lidl:UnsignedByte .